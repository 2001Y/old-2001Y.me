// All
html,body,h1,h2,h3,h4,h5,h6,a,p,span,em,small,strong,sub,sup,mark,del,ins,strike,abbr,dfn,blockquote,q,cite,code,pre,ol,ul,li,dl,dt,dd,div,section,article,main,aside,nav,header,hgroup,footer,img,figure,figcaption,address,time,canvas,iframe,details,summary,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td
  font inherit
  margin 0
  padding 0
  border 0
  outline 0
  vertical-align baseline
  box-sizing border-box
  background-repeat no-repeat

:root {
  line-sizing: normal;
}

/* CJK言語（中国語、日本語、韓国語）での句読点の間隔を変更。 */
:root {
  text-spacing: trim-start allow-end trim-adjacent ideograph-alpha ideograph-numeric;
}

html {
  font-size: 62.5%
}
body
  font-size: 1.4rem;

h1
  font-size 4rem

article,aside,footer,header,nav,section,main,iframe,img
  display block

input,button,textarea,select
  -webkit-appearance none
  -moz-appearance none
  appearance none
  border 0
  outline 0
  border-color orange

input,select
  vertical-align middle

blockquote,q
  quotes none

blockquote:before,blockquote:after,q:before,q:after
  content ""

a
  color inherit
  display inline-block
  text-decoration none
  background-color transparent
  -webkit-text-decoration-skip objects

a:active,a:hover
  outline 0

code,kbd,pre,samp
  font-family monospace, monospace

table
  border-collapse collapse
  border-spacing 0

ol,ul
  list-style-type none

main img,main video
  max-width 75%
  max-height 75%

img {
  transition: filter 0.3s;
}

img.lazyestload {
  width: 100%;
  filter: blur(8px);
}

body
  font-family 'Oleo Script','M PLUS Rounded 1c', cursive
  font-weight 400
  color #333
  background #fff
  width 100%
  overflow-scrolling touch
  word-wrap break-word
  overflow-wrap break-word
  word-break normal
  -webkit-text-font-size-adjust 100%
  -webkit-font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing unset
  padding-right constant(safe-area-inset-right)
  padding-left constant(safe-area-inset-right)
  -webkit-font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-font-kerning normal

main
  width 100%
  max-width 850px
  margin 0 auto
  padding .5rem
  animation: fadeIn 1.5s ease 0s 1 normal;

@keyframes fadeIn
  from
    opacity: 0;
  to
    opacity: 1;

header,footer
  font-size 2rem
  text-align center
  color #fff
  background linear-gradient(30deg, #a1e5e2, #a1c6e5)

header
  padding 8rem 0
  margin-bottom: 2rem

footer
  padding 5rem 0
  margin-top: 2rem

#parapara-nav a:not(.attention)
  font-size 2rem
  display block
  opacity .7

#parapara-nav a:first-of-type
  transform rotateX(-45deg)

#parapara-nav a:last-of-type
  transform rotateX(45deg)

#title,#header-category ul, #pagination, #post-nav, footer
  display flex
  justify-content center
  align-items center

#header-category
  font-size 2.4rem
  max-width 900px
  margin 1rem auto

#header-category li, #post-nav li
  margin 0 .5rem

#header-category a
  color #a1d7e5

#header-category ul:before, #header-category ul:after
  content ""
  flex-grow: 1;
  height: 1px;
  background: #a1c6e5;
  display: block;

#header-category ul:before
  margin-right: 1rem;

#header-category ul:after
  margin-left: 1rem;

@media (prefers-color-scheme dark)
  body
    background-color #1B1C1C
    color #f3f3f3



// All
html,body,h1,h2,h3,h4,h5,h6,a,p,span,em,small,strong,sub,sup,mark,del,ins,strike,abbr,dfn,blockquote,q,cite,code,pre,ol,ul,li,dl,dt,dd,div,section,article,main,aside,nav,header,hgroup,footer,img,figure,figcaption,address,time,canvas,iframe,details,summary,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td
  font inherit
  margin 0
  padding 0
  border 0
  outline 0
  vertical-align baseline
  box-sizing border-box
  background-repeat no-repeat

article,aside,footer,header,nav,section,main
  display block

input,button,textarea,select
  -webkit-appearance none
  -moz-appearance none
  appearance none
  border 0
  outline 0
  border-color orange

input,select
  vertical-align middle

blockquote,q
  quotes none

blockquote:before,blockquote:after,q:before,q:after
  content ""

a
  color inherit
  display inline-block
  text-decoration none
  background-color transparent
  -webkit-text-decoration-skip objects

a:active,a:hover
  outline 0

code,kbd,pre,samp
  font-family monospace, monospace

table
  border-collapse collapse
  border-spacing 0

ol,ul
  list-style-type none

img,video
  max-width 100%


body
  font-family 'Oleo Script', cursive
  color #1B1C1C
  background #fff
  width 100%
  overflow-scrolling touch
  word-wrap break-word
  overflow-wrap break-word
  word-break normal
  -webkit-text-font-size-adjust 100%
  -webkit-font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing unset
  padding-right constant(safe-area-inset-right)
  padding-left constant(safe-area-inset-right)
  -webkit-font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-font-kerning normal

main
  width 100%
  max-width 900px
  margin 0 auto

header,footer
  text-align center
  color #fff
  background linear-gradient(30deg, #a1e5e2, #a1c6e5)

header
  padding 8em 0
  margin-bottom: 2em

footer
  padding 3em 0
  margin-top: 2em

h1
  font-size 2.5em

h2
  font-size 2em
  margin 2em 0 .5em

h3
  font-size 1.5em

h4
  font-size 1.2em

h5,h6
  font-size 1em


#logo
  margin: 0 1em

#parapara-nav
  width 7em
  text-align left
  line-height 1em

#parapara-nav a:not(.attention)
  font-size 2em
  display block
  opacity .7

#parapara-nav a:first-of-type
  transform rotateX(-45deg)

#parapara-nav a:last-of-type
  transform rotateX(45deg)

#title,#header-category, #pagination, #post-nav, footer
  display flex
  justify-content center
  align-items center

#header-category li, #pagination li, #post-nav li
  margin 0 .3em

#header-category
  font-size 1.5em

#header-category a
  color #a1d7e5

#header-category:before, #header-category:after
  content ""
  flex-grow: 1;
  height: 1px;
  background: #a1c6e5;
  display: block;

#header-category:before
  margin-right: .4em;

#header-category:after
  margin-left: .4em;

@media (prefers-color-scheme dark)
  body
    background-color #1B1C1C
    color #f3f3f3

@font-face
  font-family 'Oleo Script'
  font-style normal
  font-weight 400
  src url('/fonts/oleo-script-regular.eot') /* IE9 Compat Modes */

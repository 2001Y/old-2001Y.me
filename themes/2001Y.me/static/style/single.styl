// Post
.Web
  --light: #a1c6e5;
  --dim: #a1d7e5;
  
.Apple
  --light: #e6a2d8;
  --dim: #e3a2e6;
  
.Camera
  --light: #d8e6a2;
  --dim: #e6e3a2;
  
.Other
  --light: #c3c3c3;
  --dim: #777;

body
  counter-reset: number 0;
  
#main-section a
  color var(--dim)
  position: relative;
  transition: .3s;
  
#main-section a:hover
  color var(--light)
  transition: .3s;

#main-section a:after
  position: absolute;
  bottom: .2em;
  left: 0;
  content: '';
  width: 100%;
  height: .06em;
  background: var(--light)
  transform: scale(0, 1);
  transition: transform .3s;
  transform-origin: right top;

#main-section a:hover:after
  transform-origin: left top;
  transform: scale(1, 1);

#main-section,#post-meta
  max-width 850px
  width 80vw
  margin auto
  @media screen and (max-width: 870px)
    width 100%

#post-meta
  color var(--light)
  margin-bottom 1em
  display flex
  justify-content:space-between;
  
#post-tag
  display inline
  
#post-tag li:after
  content ", "

#breadcrumbs li
  display inline

#breadcrumbs li:not(:first-of-type):before
  content ">"
  margin 0 .3rem

header
  background: none;
  position: relative;
  flex-direction: column;
  flex-wrap: wrap
  padding 2em

header:before,header:after
  content: "";
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 24rem;

header:before
  background: linear-gradient(30deg, var(--light), var(--dim));
  opacity .7
  z-index: -1;
  
header:after
  filter blur(3px)
  animation: fadeIn 1.5s ease 0s 1 normal;
  z-index: -2;

main
  background #fff

iframe
  margin auto

#prev-post,#next-post
  padding 0 3rem
  position absolute
  top 0
  height 100%
  display flex
  align-items center

#prev-post
  margin 0 auto 0 0
  left 0

#next-post
  margin 0 0 0 auto
  right 0

#prev-post:after,#next-post:after
  content:'';
  width: 1.5rem;
  height: 1.5rem;
  border-top: 2px solid #fff;
  border-right: 2px solid #fff;
  display block

#prev-post:after
  transform: rotate(-135deg);

#next-post:after
  transform: rotate(45deg);

#prev-post:hover + #next-post + h1:before,#prev-post:hover + h1:before
  content: attr(data-prev-post)"\A";

#next-post:hover + h1:before
  content: attr(data-next-post)"\A";

#next-post:hover + #title,#prev-post:hover + #title,#prev-post:hover + #next-post + #title
  animation fadeInOut 1s ease 0s 1 forwards

#next-post:hover + #title + #description,#prev-post:hover + #title + #description,#prev-post:hover + #next-post + #title + #description
  animation fadeOut .3s ease 0s 1 forwards

@keyframes fadeInOut
  from
    opacity: 0;
  to
    opacity 1

@keyframes fadeOut
  from
    opacity: 1
  to
    opacity 0
    
h1,h2,h3,h4,h5
  font-weight bold

h1
  height 1.5em
  overflow hidden

h1:before
  white-space: pre;
  
h2
  color var(--dim)
  font-size: 3rem;
  margin: 3rem 0 2rem;
  position: relative;
  padding-left: 4rem;
  font-weight: 700;
  
h2::before,h2::after
  content: "";
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 2rem 1.2rem 0 1.2rem;
  position:absolute;
  
h2::before
  border-color: var(--light) transparent transparent transparent;
  top: 1.5rem;
  left: 0rem;

h2::after
  border-color: var(--dim) transparent transparent transparent;
  top: 1rem;
  left: 1rem;

h3
  font-size 2rem
  margin-top 2rem

h3:before
  color rgba(51,51,51,.5)
  counter-increment number 1
  content counter(number) ".\A"

h4
  font-size 1.2rem

h5,h6
  font-size 1rem

p
  font-family 'M PLUS Rounded 1c', cursive
  font-size 1.4rem
  margin-top 1rem
  line-height: 1.875;

#description,#main-section,#breadcrumbs
  opacity 0

#description
  animation: fadeIn 1.5s ease .2s 1 forwards;

#main-section,#breadcrumbs
  animation: fadeIn 1.5s ease .6s 1 forwards;

#qr
  width 10rem
  margin auto
  image-rendering: pixelated;
  image-rendering: -webkit-crisp-edges;
  image-rendering: -moz-crisp-edges;
  -ms-interpolation-mode: nearest-neighbor;

picture
  display block

main source,main picture img,.youtube
  margin auto
  display block
  cursor pointer

.youtube
  font-size 2.4vmin
  max-width 75%
  max-height 40vmin
  height 40vw
  position relative
  z-index 0
  background-size: cover;
  margin auto

.youtube:before
  content: attr(data-title);
  text-align center
  color #fff
  position absolute
  bottom 13vmin
  left 0
  width 100%
  display block
  z-index -1

.youtube:after
  content  url(/youtube.svg)
  width 9vmin
  position absolute
  top calc(50% - 5vmin)
  left calc(50% - 4.5vmin)
  z-index -1

.youtube:hover:after
  content  url(/youtube-red.svg)

.youtube iframe
  z-index 1

.blog-link
  font-size 3rem
  margin auto
  width 75%
  background #ebebeb
  border solid
  border-radius 2rem

.blog-link img
  width 10rem

#lightbox
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: url(/load.svg) no-repeat center, rgba(250, 250, 250, .3);
  backdrop-filter: blur(3px);
  -webkit-backdrop-filter: blur(3px);
  z-index: 99999;
  transition .5s;
  cursor pointer

#lightbox img,#lightbox source
  max-width: 100vw;
  width: 90vw;
  max-height 100vh
  margin 0
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition .5s;
  @media screen and (max-width: 870px) 
    min-width 100vw

#lightbox:after,#lightbox:before
  content ""
  width 4rem
  border-top solid #686868 .2em
  position: fixed;
  top 3rem
  right 1rem

#lightbox:after
  transform rotate(45deg)

#lightbox:before
  transform rotate(-45deg)

.close
  opacity: 0;
  visibility: hidden;
.open
  opacity: 1;
  visibility: visible;

.twitter-tweet
  margin auto


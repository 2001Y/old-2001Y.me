// Post
body{
  background: linear-gradient(to right top, #a1d7e5 50%, #e6e6e6 50%);
  background-size: 100% calc(100% - 100vh + 5px);
  background-repeat: no-repeat;
}

body:before
  content:'';
  position: fixed;
  top 5px
  bottom 0
  width 100%
  z-index -1
  background #fff

.breadcrumbs li
  display inline

.breadcrumbs li:not(:first-of-type):before
  content ">"
  margin 0 .3em
// List
header,footer
  background linear-gradient(30deg, #a1e5e2, #a1c6e5)

#logo
  margin: 0 1rem
  width 12rem

#parapara-nav
  width 4.5em
  text-align left
  line-height 1rem
  transform:translate3d(0,0,0);

#main-section
  max-width 850px
  margin auto

@media screen and (min-width: 870px)
  #main-section
    display: flex
    flex-wrap:wrap

  #main-section article
    width calc(100%/2)

@media screen and (max-width: 870px)
  #main-section
    padding 2rem

#main-section a
  display flex

#main-section article
  padding 90px .5rem 0 .5rem

#main-section li
  display: block;
  padding: .5rem;
  background: rgba(250,250,250,.5)

#main-section li:hover
  background: rgba(250,250,250,.7)

#main-section time
  display block

#main-section a
  color #000

.attention
  font-size 4rem
  line-height: 1.5em

.post-img
  width: 180px
  height: 150px
  clip-path polygon(3% 0%, 50% 100%, 97% 0%)
  position: absolute
  z-index 1
  transform:translate3d(0,0,0);

.post-color
  background: #c3c3c3
  width: 180px
  height: 150px
  clip-path: polygon(50% 0%, 3% 100%, 97% 100%)
  transform-origin: 50% 65%
  transition 0
  position: relative
  top: -55px
  left: 0
  z-index -1
  opacity .5

#main-section article:hover > a > .post-color
  will-change transform transition
  transform rotate(360deg)
  transition .6s
  z-index -1

.Apple
  background #e6a2d8

.Web
  background #a1d7e5

.Camera
  background #d8e6a2

.post-data
  margin-left .6rem

.post-data span
  display block

.post-title
  font-size 1.7rem

#pagination
  font-size 1.2rem
  margin-top 2rem
  align-items flex-end

#pagination li
  padding 0.3rem .6rem

#active
  border-top solid .15rem #000